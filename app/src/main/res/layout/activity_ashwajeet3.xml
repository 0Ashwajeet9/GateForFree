<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/style_spinner1"
    tools:context=".ashwajeet3">


    <EditText
        android:id="@+id/editText3"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:background="@drawable/edit_view"
        android:ems="10"
        android:hint="Username"

        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColorHint="#999595"
        android:textColorLink="#EF0808"
        android:textSize="18sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="322dp"
        android:layout_height="52dp"


        android:background="@drawable/edit_view"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="Email id"

        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColor="#0C0C0C"
        android:textColorHint="#8C8888"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.632" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_view"
        android:ems="10"

        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="#929090"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <Button
        android:id="@+id/button5"
        android:layout_width="133dp"
        android:layout_height="42dp"
        android:background="@drawable/edit_button"
        android:text="Button"
        android:textColor="#F40626"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.986" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="204dp"
        android:layout_height="131dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057"
        app:srcCompat="@drawable/entering" />

</androidx.constraintlayout.widget.ConstraintLayout>